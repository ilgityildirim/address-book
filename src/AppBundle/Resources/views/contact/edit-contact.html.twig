{% extends 'base.html.twig' %}

{% block title %}Address Book - Edit {{ contact.fullName }}{% endblock %}

{% block body %}
    <div class="row mt-5 mb-5">
        <div class="col-6">
            <a href="{{ url('country_list') }}" class="btn btn-default">Countries</a>
            <a href="{{ url('city_list') }}" class="btn btn-default">Cities</a>
        </div>
        <div class="col-6 text-right">
            <a href="{{ url('homepage') }}" class="btn btn-primary">Contact Listing</a>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            {{ form_start(form, {'attr': {'data-url-country-cities': url('country_list')}}) }}
                {{ form_row(form.firstName) }}
                {{ form_row(form.lastName) }}
                {{ form_row(form.email) }}
                {{ form_row(form.birthday) }}
                {{ form_row(form.addresses) }}
                <div class="row mt-3">
                    <div class="col-6">
                        <button id="newAddress" class="btn btn-info">{{ 'add new address'|capitalize }}</button>
                    </div>
                    <div class="col-6 text-right">
                        <button type="submit" class="btn btn-primary">{{ 'save'|capitalize }}</button>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/app/css/contactForm.css') }}">
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('bundles/app/js/contactForm.js') }}" type="text/javascript"></script>
{% endblock %}
